{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    // Variables: https://code.visualstudio.com/docs/editor/variables-reference
    "version": "2.0.0",
    "tasks": [
        {
            "label": "rustc",
            "type": "shell",
            "command": "cd ${relativeFileDirname}; CDIR=$(basename `pwd`); rm -rf test; oj download https://atcoder.jp/contests/$CDIR/tasks/${fileBasenameNoExtension} && rustc ${file} -o a.out && oj test && oj submit https://atcoder.jp/contests/$CDIR/tasks/${fileBasenameNoExtension} ${fileBasename} -w 0 -y",
            "group": {
                "kind": "build",
                "isDefault": true,
            }
        },
    ]
}